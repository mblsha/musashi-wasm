{
  "name": "@m68k/monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "stage:wasm": "mkdir -p packages/core/wasm && cp -f musashi-node.out.mjs packages/core/wasm/ && cp -f musashi-node.out.wasm packages/core/wasm/ || true",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "test:ci": "npm run test:ci --workspaces",
    "test:core": "npm run -s stage:wasm && NODE_OPTIONS='--experimental-vm-modules' node scripts/run-with-timeout.mjs 60 npx jest --projects packages/core --runInBand --verbose --no-cache",
    "clean": "npm run clean --workspaces",
    "typecheck": "npm run typecheck --workspaces",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "format": "npm run format --workspaces",
    "format:check": "npm run format:check --workspaces",
    "build:wasm": "./build.sh",
    "build:wasm:perfetto": "ENABLE_PERFETTO=1 ./build.sh",
    "build:protobuf": "./build_protobuf_wasm.sh",
    "test:local-ci": "./test_ci_locally.sh",
    "test:with-wasm": "./test_with_real_wasm.sh",
    "dev:wasm": "npm run build:wasm && npm run test:with-wasm"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.3"
  }
}
