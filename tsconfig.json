{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "references": [
    { "path": "./packages/core" },
    { "path": "./packages/memory" }
  ],
  "exclude": ["node_modules", "**/dist", "**/*.test.ts"]
}