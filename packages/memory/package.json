{
  "name": "@m68k/memory",
  "version": "1.0.0",
  "description": "Memory utilities for M68k emulation",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "test": "jest",
    "typecheck": "tsc --noEmit"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@m68k/core": "^1.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [".ts"],
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        { "useESM": true, "tsconfig": "./tsconfig.json" }
      ]
    },
    "roots": ["<rootDir>/src"],
    "testMatch": ["**/*.test.ts"]
  }
}
