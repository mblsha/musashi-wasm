{
  "name": "@m68k/core",
  "version": "1.0.1",
  "description": "M68k CPU emulator core with WebAssembly backend",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "test": "NODE_OPTIONS='--experimental-vm-modules' npx jest",
    "test:ci": "NODE_OPTIONS='--experimental-vm-modules' npx jest --ci --forceExit --maxWorkers=1",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts"
  },
  "files": [
    "dist",
    "wasm"
  ],
  "dependencies": {
    "@m68k/common": "^0.1.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.38.0",
    "jest": "^30.2.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 10000,
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "useESM": true,
          "tsconfig": {
            "target": "ES2022",
            "module": "ES2022",
            "moduleResolution": "bundler",
            "allowImportingTsExtensions": true
          }
        }
      ]
    },
    "moduleNameMapper": {
      "^\\./address-utils\\.js$": "<rootDir>/src/address-utils.ts",
      "^\\./types\\.js$": "<rootDir>/src/types.ts",
      "^\\./musashi-wrapper\\.js$": "<rootDir>/src/musashi-wrapper.ts",
      "^\\./index\\.js$": "<rootDir>/src/index.ts",
      "^\\./test-utils\\.js$": "<rootDir>/src/test-utils.ts"
    },
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/*.test.ts"
    ]
  }
}
