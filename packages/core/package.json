{
  "name": "@m68k/core",
  "version": "1.0.0",
  "description": "M68k CPU emulator core with WebAssembly backend",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "test": "NODE_OPTIONS='--experimental-vm-modules' npx jest",
    "test:ci": "NODE_OPTIONS='--experimental-vm-modules' npx jest --ci",
    "typecheck": "tsc --noEmit"
  },
  "files": [
    "dist",
    "wasm"
  ],
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [".ts"],
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        { 
          "useESM": true,
          "tsconfig": {
            "target": "ES2022",
            "module": "ES2022",
            "moduleResolution": "bundler",
            "allowImportingTsExtensions": true
          }
        }
      ]
    },
    "moduleNameMapper": {
      "^\\./types\\.js$": "<rootDir>/src/types.ts"
    },
    "roots": ["<rootDir>/src"],
    "testMatch": ["**/*.test.ts"]
  }
}
